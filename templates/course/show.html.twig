{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block pagetitle %}Formations{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.description }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ course.createdAt ? course.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ course.updatedAt ? course.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('app_course_index') }}">Retour à la liste</a></button>

    <button><a href="{{ path('app_course_edit', {'id': course.id}) }}">Modifier</a></button>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
