{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block pagetitle %}Messages{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ message.object }}</td>
            </tr>
            <tr>
                <th>Expéditeur</th>
                <td>{{ message.expeditor }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('app_message_index') }}">Retour à la liste</a></button>

